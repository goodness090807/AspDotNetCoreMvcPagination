@model myfirstmvc.ViewModels.Partial.PaginationViewModel
@{
    var isFirst = Model.pageNum == 1;
    var isLast = Model.pageNum == Model.TotalPage;

    var firstDis = isFirst ? "disabled" : string.Empty;
    var LastDis = isLast ? "disabled" : string.Empty;
}

@if (Model.TotalPage > 0)
{
    <nav>
        <ul class="pagination">
            <li class="page-item @firstDis">
                <a class="page-link" asp-route-pageNum="@(Model.pageNum - 1)">上一頁</a>
            </li>

            @if (isFirst)
            {
                <li class="page-item active"><label class="page-link">1</label></li>
            }
            else
            {
                <li class="page-item"><button class="page-link" name="pageNum" value="1" onclick="pagChange()">1</button></li>
            }

            @if (Model.TotalPage > 7 && Model.pageNum >= 5)
            {
                <li class="page-item disabled">
                    <a class="page-link">...</a>
                </li>
            }

            @for (int i = Model.minPage; i <= Model.maxPage; i++)
            {
                if (Model.pageNum == i)
                {
                    <li class="page-item active"><label class="page-link">@i</label> </li>
                }
                else
                {
                    <li class="page-item"><button class="page-link" name="pageNum" value="@i" onclick="pagChange()">@i</button></li>
                }
            }
            @if (Model.TotalPage > 7 && !(Model.pageNum > Model.TotalPage - 4))
            {
                <li class="page-item disabled">
                    <a class="page-link">...</a>
                </li>
            }

            @if (Model.TotalPage > 1)
            {
                @if (isLast)
                {
                    <li class="page-item active"><label class="page-link">@Model.TotalPage</label></li>
                }
                else
                {
                   <li class="page-item"><button class="page-link" name="pageNum"  value="@Model.TotalPage" onclick="pagChange()">@Model.TotalPage</button></li>
                }
            }

            <li class="page-item @LastDis">
                <button class="page-link" name="pageNum" value="@(Model.pageNum + 1)" onclick="pagChange()">下一頁</button>
            </li>
        </ul>
    </nav>
}

@section Scripts{
    <script>
        $(document).ready(function () {
            pagChange(){
                $('#fmQuery').submit();
            }
        });
    </script>
}